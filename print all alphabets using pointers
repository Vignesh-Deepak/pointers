int main()
{
  char str[27]
  char *ptr;
  ptr= str; // important line before getting input for pointer both for array and strings
  for(int i=0;i<26;i++)
  {
     *ptr=str+i; // when comes for alphabet/string no need to get input in iteration .either with also no problem 
     ptr=i+'a';
     ptr++; // important 
   }  
  ptr=str;  // important line after getting input for pointer both for array and strings
  for(int i=0;i<26;i++)
  {
     printf("%c", *ptr);
     ptr++;
   }
   
 }  
 
